            android:text="Bayar"
            android:layout_gravity="bottom"
            android:layout_marginStart="40dp"
            android:backgroundTint="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />



    </LinearLayout>
